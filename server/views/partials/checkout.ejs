<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="/@fortawesome/fontawesome-free/css/all.min.css"
    />
    <link rel="stylesheet" href="/Content/app.css" />
  </head>

  <%- include header.ejs%> <%- include main_nav.ejs%>

  <!--men Me Page Content-->

  <body background="">
    <main class="container-fluid">
      <div class="container list-container pt-5" style="min-height: 70vh">
        <!--title-->
        <!-- <h1 class="display-6 mt-5">Product</h1> -->
        <!--contents-->

        <div class="container mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/cart/checkout" method="POST">
                <div class="form-group">
                  <label for="address" class="my-0">Address</label>
                  <input
                    type="text"
                    name="address"
                    class="form-control my-0"
                    placeholder="Enter Shipping Address"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="deliveryNote" class="my-0">Delivery Note</label>
                  <input
                    type="text"
                    class="form-control my-0"
                    name="deliveryNote"
                    placeholder="Delivery note"
                  />
                </div>

                <div class="col-sm-6 col-xs-12">
                  <% if(session.cart.totalQty) { %>
                  <a href="/cart/payment" class="btn btn-secondary">PAYMENT</a>
                  <% } %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include bottom_nav.ejs%>
  </body>
</html>
